{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./src",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "skipLibCheck": true,

    "moduleDetection": "force",
    "isolatedModules": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
